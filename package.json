{
  "name": "athena-lms",
  "version": "0.1.0",
  "description": "Athena LMS",
  "license": "MIT",
  "author": "Sergei Shekshuev <sergei.shekshuev@gmail.com>",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./libs/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/athena-api run start:dev",
    "dev:studio": "npm --workspace apps/athena-studio run start",
    "dev:learn": "npm --workspace apps/athena-learn run start",
    "dev:control": "npm --workspace apps/athena-control run start",
    "build:all": "npm run build:api && npm run build:studio && npm run build:learn && npm run build:control",
    "build:api": "npm --workspace apps/athena-api run build",
    "build:studio": "npm --workspace apps/athena-studio run build",
    "build:learn": "npm --workspace apps/athena-learn run build",
    "build:control": "npm --workspace apps/athena-control run build",
    "build:types": "npm --workspace libs/types run build",
    "build:common": "npm --workspace libs/common run build",
    "lint:all": "npm run lint:api && npm run lint:studio && npm run lint:learn && npm run lint:control",
    "lint:api": "npm --workspace apps/athena-api run lint",
    "lint:studio": "npm --workspace apps/athena-studio run lint",
    "lint:learn": "npm --workspace apps/athena-learn run lint",
    "lint:control": "npm --workspace apps/athena-control run lint",
    "lint:libs": "npm --workspaces --if-present --include-workspace-root=false --workspace libs run lint",
    "test:all": "npm run test:api && npm run test:studio && npm run test:learn && npm run test:control",
    "test:api": "npm --workspace apps/athena-api run test",
    "test:api:e2e": "npm --workspace apps/athena-api run test:e2e",
    "test:studio": "npm --workspace apps/athena-studio run test",
    "test:learn": "npm --workspace apps/athena-learn run test",
    "test:control": "npm --workspace apps/athena-control run test",
    "test:watch:api": "npm --workspace apps/athena-api run test:watch",
    "test:watch:studio": "npm --workspace apps/athena-studio run test:watch",
    "test:watch:learn": "npm --workspace apps/athena-learn run test:watch",
    "test:watch:control": "npm --workspace apps/athena-control run test:watch",
    "typecheck:all": "npm run typecheck:api && npm run typecheck:studio && npm run typecheck:learn && npm run typecheck:control",
    "typecheck:api": "npm --workspace apps/athena-api run typecheck",
    "typecheck:studio": "npm --workspace apps/athena-studio run typecheck",
    "typecheck:learn": "npm --workspace apps/athena-learn run typecheck",
    "typecheck:control": "npm --workspace apps/athena-control run typecheck",
    "typecheck:libs": "npm --workspaces --if-present --workspace libs run typecheck"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.8.1",
    "@types/cookie-parser": "^1.4.10",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7"
  }
}
